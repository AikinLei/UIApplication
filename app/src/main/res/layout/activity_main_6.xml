<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.admin.uiapplication.MainActivity">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_left_slide"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/gray_f1_solid_bg"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_me_userhead"/>

                <TextView
                    android:id="@+id/tv_settlement_manage_other_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ef7552"
                    android:textSize="17sp"
                    tools:text="王大陆"/>

                <TextView
                    android:id="@+id/tv_settlement_manage_other_contractNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#b39729"
                    android:textSize="12sp"
                    tools:text="NCZ201803080013"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_settlement_manage_other_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxEms="13"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="培训账号_新车_ 阿尔法罗密欧"
                    />


                <TextView
                    android:id="@+id/tv_settlement_manage_other_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="逾期期数"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_process_audit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="融资总额"/>

                <TextView
                    android:id="@+id/tv_process_audit_change_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="罚息总额"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_settlement_manage_other_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="最大逾期"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_settlement_manage_other_penalty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逾期开始时间"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/com_textSize_min"
                        />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_settlement_manage_other_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ef7552"
                    android:textSize="12sp"
                    tools:text="区域客户经理"/>

                <TextView
                    android:id="@+id/tv_settlement_manage_other_isoverdue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ef7552"
                    android:textSize="12sp"
                    tools:text="区域客户经理"/>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_left_slide"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/gray_f1_solid_bg"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_me_userhead"/>

                <TextView
                    android:id="@+id/tv_settlement_manage_apply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ef7552"
                    android:textSize="17sp"
                    tools:text="王大陆"/>

                <TextView
                    android:id="@+id/tv_settlement_manage_apply_contractNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#b39729"
                    android:textSize="12sp"
                    tools:text="NCZ201803080013"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_settlement_manage_apply_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxEms="13"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="培训账号_新车_ 阿尔法罗密欧"
                    />


                <TextView
                    android:id="@+id/tv_settlement_manage_apply_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="融资总额"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_settlement_manage_apply_fangkuandate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp"
                    tools:text="放款日期"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_settlement_manage_apply_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ef7552"
                    android:textSize="12sp"
                    tools:text="状态"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
